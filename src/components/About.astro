---
import { siteConfig } from "../config";
import { IconBriefcase, IconBook, IconCertificate } from "@tabler/icons-react";
---

<section id="about" class="reveal-up px-6 md:px-20 lg:px-32 py-24 bg-slate-950">
  <div class="max-w-6xl mx-auto">

    <!-- Section Heading -->
    <div class="mb-14">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-100">
        About Me
      </h2>
      <div
        class="w-20 h-[4px] mt-3 rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      ></div>
    </div>


  <div class="grid grid-cols-1 lg:grid-cols-12 gap-14 items-start">
      <!-- About Text -->
      <div class="lg:col-span-7 space-y-8">
        <p class="text-lg leading-relaxed text-slate-300">
          {siteConfig.aboutMe}
        </p>

        <!-- Cards -->
        <div class="flex flex-wrap gap-6">
          <div class="bg-slate-900 border border-slate-800 p-4 rounded-lg flex flex-col items-center text-center gap-2 flex-1 min-w-[160px]">
            <IconBriefcase size={28} stroke={2} class="text-indigo-400" />
            <p class="accent-mono text-2xl">3+</p>
            <p class="text-slate-400">Years Experience</p>
          </div>

          <div class="bg-slate-900 border border-slate-800 p-4 rounded-lg flex flex-col items-center text-center gap-2 flex-1 min-w-[160px]">
            <IconBook size={28} stroke={2} class="text-indigo-400" />
            <p class="accent-mono text-2xl">5</p>
            <p class="text-slate-400">Research Publications</p>
          </div>

          <div class="bg-slate-900 border border-slate-800 p-4 rounded-lg flex flex-col items-center text-center gap-2 flex-1 min-w-[160px]">
            <IconCertificate size={28} stroke={2} class="text-indigo-400" />
            <p class="accent-mono text-2xl">3</p>
            <p class="text-slate-400">Tech Certifications</p>
          </div>
        </div>
      </div>

      <!-- Skills -->
      <div class="lg:col-span-5">
        <h3 class="text-xl text-slate-100 font-medium mb-5">Technical Skills</h3>
        <div class="flex flex-wrap gap-3">
          {siteConfig.skills.map((skill) => (
            <span class="accent-mono px-3 sm:px-4 py-1.5 sm:py-2 bg-slate-900 
              border border-slate-800 text-white rounded-lg text-sm sm:text-base md:text-lg">
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>