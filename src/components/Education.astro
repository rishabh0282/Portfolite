---
import { siteConfig } from "../config";
import { IconSchool, IconCertificate, IconCheck } from "@tabler/icons-react";

const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="reveal-up px-6 md:px-20 lg:px-32 py-24 bg-slate-950">
    <div class="max-w-6xl mx-auto">

      <!-- Section Heading -->
      <div class="mb-14">
        <h2 class="text-4xl md:text-5xl font-bold text-slate-100">
          Education
        </h2>
        <div
          class="w-20 h-[4px] mt-3 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <div class="space-y-8">
        {siteConfig.education.map((edu) => (
          <div class="bg-slate-900 border border-slate-800 p-6 md:p-7 rounded-xl hover:border-indigo-400 hover:shadow-lg hover:shadow-indigo-500/10 transition-all">
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
              <div class="flex items-center gap-2">
                <IconSchool size={22} stroke={2} class="text-indigo-400" />
                <h3 class="text-xl font-semibold text-slate-100">
                  {edu.degree}
                </h3>
              </div>
              <p class="accent-mono text-sm md:text-base mt-1 flex items-center gap-2">
                <IconCertificate size={18} stroke={2} class="text-indigo-400" />
                {edu.school}
              </p>

              <span class="accent-mono text-xs sm:text-sm mt-1 sm:mt-0">
                {edu.dateRange}
              </span>
            </div>

            {edu.achievements && edu.achievements.length > 0 && (
              <ul class="mt-5 space-y-2 text-slate-300">
                {edu.achievements.map((achievement) => (
                  <li class="flex items-start text-sm md:text-base gap-2">
                    <IconCheck size={16} stroke={2} class="text-indigo-400 mt-1" />
                    <span>{achievement}</span>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
