---
import { siteConfig } from "../config";
import { IconFileText, IconRocket } from "@tabler/icons-react";

---
<section
  id="hero"
  class="relative isolate overflow-hidden bg-slate-950 min-h-screen flex flex-col"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Hero content wrapper -->
  <div class="flex-1 flex items-center px-6 md:px-20 lg:px-32 pt-32 md:pt-48">
    <div>
      <!-- Greeting + Name -->
      <h1 class="text-4xl md:text-6xl font-bold text-slate-100 leading-tight">
        Hi, Iâ€™m <span class="accent-mono">{siteConfig.name}</span>
      </h1>

      <!-- Title -->
      <h2 class="accent-mono text-xl md:text-2xl mt-6">
        {siteConfig.title}
      </h2>

      <!-- Intro -->
      <p class="max-w-2xl text-slate-400 text-lg leading-relaxed mt-6">
        I build scalable systems and AI-driven applications with a strong focus on
        performance, reliability, and engineering discipline. My work blends full-stack
        development, automation-first testing, and modern software delivery practices.
      </p>

      <div class="flex flex-wrap gap-4 mt-8">
        <a
          href="/rishabh_dev.pdf"
          target="_blank"
          class="flex items-center gap-2 px-6 py-3 bg-indigo-400 hover:bg-indigo-500 text-gray-100 rounded-lg transition-all shadow-lg shadow-indigo-500/30"
        >
          <IconFileText size={20} stroke={2} />
          <span>Download Resume</span>
        </a>

        <a
          href="#projects"
          class="flex items-center gap-2 accent-mono px-6 py-3 border border-slate-600 hover:border-indigo-400 hover:text-indigo-300 text-slate-300 rounded-lg transition-all"
        >
          <IconRocket size={20} stroke={2} />
          <span>View Projects</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Socials pinned at bottom -->
  <div class="absolute bottom-0 left-0 right-0 px-6 md:px-20 lg:px-32 py-6 flex gap-6 text-lg text-slate-400">
    <a href={siteConfig.social.github} class="accent-mono hover:brightness-125 transition">GitHub</a>
    <a href={siteConfig.social.linkedin} class="accent-mono hover:brightness-125 transition">LinkedIn</a>
    <a href={`mailto:${siteConfig.social.email}`} class="accent-mono hover:brightness-125 transition">Email</a>
  </div>
</section>
